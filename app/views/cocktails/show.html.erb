<% @cocktail = @cocktail.nil? ? Cocktail.find(id) : @cocktail %>

<h1><%= @cocktail.name %></h1>
<h2>You will need:</h2>
<ul>
  <% @cocktail.ingredients.each do |ingredient| %>
    <li><%= ingredient.name %></li>
  <% end %>
</ul>
<h2>How to do it:</h2>
<% @cocktail.doses.each do |dose| %>
  - <%= dose.description %><br>
<% end %>

<%= render 'doses/form' %>
